<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="apple.yj.com.pojo">
    <class name="Users" table="T_ORG_USER">
        <meta attribute="class-description">This class contains the employee detail.</meta>
        <!-- 定义主键字段 -->
        <id name="id" column="F_USER_ID" type="int">
           <generator class="increment" />
        </id>

        <!-- 其它变通字段 -->
        <property name="name" column="F_NAME" type="string" />
        <property name="sex" column="F_SEX" type="string" />
        <property name="password" column="F_PASSWORD" type="string" />
    </class>
</hibernate-mapping>